<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cn.edu.guet.secd.web.pojo.Spot" table="s_spot">

        <!--
            private List<SpotComment> spotComments;
            private City city;
            private List<Photo> photos;
        -->

        <id name="spotId" column="spot_id">
            <generator class="uuid"/>
        </id>

        <timestamp name="updateTime" column="update_time" access="field"/>

        <property name="spotName" column="spot_name" type="string"/>

        <property name="score" column="score" type="double"/>

        <property name="createTime" type="timestamp">
            <column name="create_time" sql-type="datetime"/>
        </property>

        <property name="specialHint" column="special_hint" type="string"/>

        <property name="introduce" column="introduce" type="string"/>

        <property name="brightPoint" column="bright_point" type="string"/>

        <set name="spotComments" inverse="true" cascade="save-update">
            <key column="shop_id"/>
            <one-to-many class="cn.edu.guet.secd.web.pojo.ShopComment"/>
        </set>

    </class>
</hibernate-mapping>